[Unit]
Description=Run local rsync backup every 10 minutes

[Timer]
# Run 2 minutes after boot, then every 10 minutes
OnBootSec=2min
OnUnitActiveSec=10min

# Small jitter to avoid colliding with restic timer
RandomizedDelaySec=30

# Catch up on missed runs (laptop sleep, etc.)
Persistent=true

[Install]
WantedBy=timers.target
